@{
    ViewData["Title"] = "Cadastro Cliente";
}
@* Formulário Cadastro Cliente *@
<div class="container">
    @* LINHA TITULO *@
    <div class="row">
        <div class="col text-center">
            <h1>❉ Cadastro Cliente ❉</h1>
        </div>
    </div>
    @* LINHA NOME E CPF *@
    <div class="row">
        <div class="col">
            <label for="" class="form-label fw-bolder">Nome: </label>
            <input type="text" class="form-control" id="" />
        </div>
        <div class="col-lg-3">
            <label for="" class="form-label fw-bolder">CPF:</label>
            <input type="text" class="form-control" id="" />
        </div>
        <div class="col-lg-3">
            <label for="" class="form-label fw-bolder">RG:</label>
            <input type="text" class="form-control" id="" />
        </div>
        <div class="col-lg-2">
            <label for="" class="form-label fw-bolder text-nowrap">Data Nascimento:</label>
            <input type="text" class="form-control" id="" />
        </div>
    </div>
    @* LINHA ENDEREÇO *@
    <div class="row">
        <div class="col-sm-2">
            <label for="" class="form-label fw-bolder">CEP:</label>
            <input type="text" class="form-control" id="" />
        </div>
        <div class="col-sm-1">
            <label for="" class="form-label fw-bolder">UF:</label>
            <input type="text" class="form-control" id="" />
        </div>
        <div class="col-sm-2">
            <label for="" class="form-label fw-bolder">Cidade:</label>
            <input type="text" class="form-control" id="" />
        </div>
        <div class="col-sm-3">
            <label for="" class="form-label fw-bolder">Bairro:</label>
            <input type="text" class="form-control" id="" />
        </div>
        <div class="col-sm-3">
            <label for="" class="form-label fw-bolder">Rua:</label>
            <input type="text" class="form-control" id="" />
        </div>
        <div class="col-sm-1">
            <label for="" class="form-label fw-bolder">Número:</label>
            <input type="text" class="form-control" id="" />
        </div>
    </div>
    <div class="row">
        <div class="col">
            <label for="" class="form-label fw-bolder">Complemento:</label>
            <input type="text" class="form-control" id="" />
        </div>
    </div>
    <div class="row mt-3 justify-content-md-end">
        <div class="col-3 d-flex justify-content-end">
            <input type="submit" class="btn btn-outline-info btn-lg" name="name" value="Cadastrar" />
        </div>
    </div>
